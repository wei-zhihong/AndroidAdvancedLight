<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lollipop.LollipopActivity">

    <Button
        android:id="@+id/btn_rv_test"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="RecyclerViewTest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_rv_test_two"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="RecyclerViewTestTwo"
        app:layout_constraintTop_toBottomOf="@id/btn_rv_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_n"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android7"
        app:layout_constraintTop_toBottomOf="@id/btn_rv_test_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>