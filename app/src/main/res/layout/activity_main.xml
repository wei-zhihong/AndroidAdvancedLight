<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_version"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="版本特性"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="自定义View"
        app:layout_constraintTop_toBottomOf="@id/btn_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_n"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android7"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_o"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android8"
        app:layout_constraintTop_toBottomOf="@id/btn_n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_p"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android9"
        app:layout_constraintTop_toBottomOf="@id/btn_o"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_q"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android10"
        app:layout_constraintTop_toBottomOf="@id/btn_p"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_r"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="android11"
        app:layout_constraintTop_toBottomOf="@id/btn_q"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>